{
  "cSpell.language": "en",
  "editor.formatOnSave": true,
  "editor.wordWrap": "on",
  "editor.rulers": [
    80,
    120
  ],
  "cSpell.words": [
    "ddir",
    "pytest",
    "venv",
    "yannickkirschen"
  ],
  "autopep8.args": [
    "--max-line-length=140"
  ],
  "flake8.args": [
    "--select=E9,F63,F7,F82",
    "--max-line-length=140"
  ],
  "python.analysis.typeCheckingMode": "strict",
  "python.analysis.autoImportCompletions": false,
  "python.languageServer": "Jedi",
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8"
  }
}