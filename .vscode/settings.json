{
    "cSpell.language": "en",
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.rulers": [
        80,
        120
    ],
    "cSpell.words": [
        "ddir",
        "pytest"
    ],
    "python.formatting.autopep8Args": [
        "--max-line-length=140"
    ],
    "python.formatting.blackArgs": [
        "--line-length=140"
    ],
    "python.formatting.yapfArgs": [
        "--style={based_on_style: google, column_limit: 140, indent_width: 4}"
    ]
}
